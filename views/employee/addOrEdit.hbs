<h3>{{viewTitle}}</h3>

<form action="/employee" method="POST" autocomplete="off">
  <input type="hidden" name="_id" value="{{employee._id}}">
    <div class="form-group">
    <lable>Full Name</lable>
    <input type="text" class="form-control" name="fullName" placeholder="Name" value="{{employee.fullName}}">
    <div class="text-danger">
      {{employee.fullNameError}}</div>
   </div>
    <div class="form-row">
       <div class="from-group col-md-6">
         <lable>Mobile</lable>
        <input type="text" class="form-control" name="mobile" placeholder="Mobile" value="{{employee.mobile}}">
        <div class="text-danger">
          {{employee.mobileError}}</div>
      </div>
     <div class="form-group col-md-6">
       <lable>Company Name</lable>
       <input type="text" class="form-control" name="company" placeholder="Company Name" value="{{employee.company}}">
    </div>
  </div>
    <div class="form-group">
    <lable>Email</lable>
    <input type="email" class="form-control" name="email" placeholder="Email" value="{{employee.email}}">
    <div class="text-danger">
      {{employee.emailError}}</div>
    </div>

  <div class="form-group">
    <button type"submit" class="btn btn-dark"><i class="fa fa-database"></i> Save</button>
    <a class="btn btn-secondary" href="/employee/list"><i class="fa fa-list-alt"></i> View Contact List </a>
  </div>
</form>
